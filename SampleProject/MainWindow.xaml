<Window x:Class="SampleProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:designLoc="clr-namespace:Cacx.LocalizationManager.Core;assembly=Cacx.LocalizationManager"
        xmlns:local="clr-namespace:SampleProject.MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:MainWindowMVVM/>
    </Window.DataContext>

    <d:Window.DataContext>
        <designLoc:DesignTimeWindowContext/>
    </d:Window.DataContext>

    <Grid>
        <TextBlock Text="{Binding Loc[WelcomeMessage]}" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="30"/>
    </Grid>
</Window>
